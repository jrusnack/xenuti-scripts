---
general:
  name: Foreman
  workdir: /home/cloud-user/foreman
  loglevel: info
  quiet: true

content_update:
  repo: https://github.com/theforeman/foreman.git

process:
  brakeman:
    args:
    diff: true

  commit_keyword_check:
    args: >
      -k "/tmp" -k "secret" -k "password" -k "passwd" -k "token" -k "oauth"
      -k "salt" -k "openssl" -k "root" -k "VERIFY_NONE" -k "PermitRootLogin"
    diff: true

report:
  send_mail: true
  from: jrusnack@redhat.com
  to: jrusnack@redhat.com
  server: smtp.corp.redhat.com
  port: 587
